---

<div class="wrapper" id="wrapper">
  <div class="heading">
    <h3>{wine.title}</h3>
    <h3>10,5% alc.</h3>
  </div>
  <div class="img-container">
    <img
      class="img1"
      id="img1"
      src={`../billeder/produktbilleder/${wine.img2}`}
      alt=" "
    />
  </div>
</div>

<style>
  .img-container {
    position: absolute;
    top: 0;
    display: grid;
    grid-template-columns: 1fr;
    width: 100vw;
    height: 4vw;
  }

  .img-container img {
    grid-row: 1;
    grid-column: 1;
  }
  .wrapper {
    position: relative;
    justify-content: center;
    border-right: 1px solid #32473a;
    border-bottom: 1px solid #32473a;
    width: 100vw;
    height: 100vw;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .img1 {
    width: 40%;
    margin: 0 auto;
    padding-top: 3rem;
  }

  .heading {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
  }

  h3,
  p {
    padding: 1rem 1.5rem;
  }

  @media (min-width: 700px) {
    .wrapper,
    .img-container,
    .img2 {
      height: 50vw;
      width: 50vw;
    }
  }
  @media (min-width: 1000px) {
    .wrapper:hover .img1 {
      transform: rotate(4deg) scale(1.04);
      transition: transform 0.7s cubic-bezier(0.22, 1, 0.36, 1); /* smooth og langsom */
      will-change: transform;
    }
    .wrapper,
    .img-container,
    .img2 {
      height: 33.33vw;
      width: 33.33vw;
    }
    .wrapper {
      position: relative;
      justify-content: center;
      border-right: 1px solid #32473a;
      border-bottom: 1px solid #32473a;
      height: 60vh;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }
  }

  .hidden {
    visibility: hidden;
  }
  .visible {
    visibility: visible;
  }
</style>

<script>
  //@ts-nocheck
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".wrapper").forEach((wrapper) => {
      const img2 = wrapper.querySelector(".img2");
      wrapper.addEventListener("mouseover", () => {
        img2.style.opacity = "1";
        img2.style.transition = "opacity 0.5s ease-in-out";
      });
      wrapper.addEventListener("mouseout", () => {
        img2.style.opacity = "0";
        img2.style.transition = "opacity 0.5s ease-in-out";
      });
    });
  });
</script>
