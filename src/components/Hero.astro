<body>
  <section class="hero">
    <img
      src="../billeder/forside/hero.webp"
      alt="Vin med Dans hero"
      class="hero-image"
    />
    <div class="hero-content">
      <p class="scroll-text">‚Üê SCROLL NED</p>
      <img src="../logo/logo-text-pink.svg" alt="Vin med Dans" class="title" />
      <div class="age-badge">
        <img
          src="../icons/plus-18-pink.svg"
          alt="Vin med Dans - 18+"
          class="age-badge"
        />
      </div>
    </div>
  </section>

  <style>
    .hero {
      width: 100%;
      height: 100vh;
      overflow: hidden;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      inset: 0;
      z-index: 0;
    }

    .hero-content {
      position: relative;
      z-index: 1;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .scroll-text {
      writing-mode: vertical-rl;
      transform: rotate(180deg);
      font-size: 1rem;
      color: #fafcf7;
      opacity: 0.8;
      align-self: flex-start;
      margin-top: 80%;
    }

    .title {
      position: absolute;
      width: 120%;
      height: 100%;
      left: 5%;
      top: -15%;
      align-self: center;
    }

    .age-badge {
      padding: 0.5rem;
      align-self: flex-end;
    }

    @media (min-width: 768px) {
      .hero-content {
        flex-direction: row;
        align-items: flex-end;
        justify-content: space-between;
        padding: 2rem;
      }

      .scroll-text {
        writing-mode: vertical-rl;
        transform: rotate(180deg);
        font-size: 1.3rem;
        color: #fafcf7;
        opacity: 0.8;
        align-self: flex-start;
        margin-top: 23%;
      }

      .age-badge {
        font-size: 1rem;
        padding: 0.6rem;
      }
    }
  </style>
</body>
