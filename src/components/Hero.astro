    transform-origin: center center;
    transition: transform 0.8s ease-out;
    width: 600px;
    pointer-events: none;
    z-index: 2;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-content {
    z-index: 1;
    height: 100%;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow-x: hidden;
  }

  .scroll-text {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    writing-mode: vertical-rl;
    font-size: 1rem;
    color: #f5fff7;
    padding: 0.2rem 0.1rem;
    z-index: 2;
    text-align: center;
    letter-spacing: 0.08em;
    display: flex;
    align-items: center;
    gap: 0.1em;
    background: none;
    border-radius: 0;
  }

  .scroll-text .arrow {
    display: inline-block;
    font-size: 1.1em;
    animation: bounceArrow 2.5s infinite;
    transition: color 0.2s;
  }

  /* Fade animation for hele indikatoren */
  @keyframes fadeInOut {
    0%,
    100% {
      opacity: 0.15;
    }
    10%,
    90% {
      opacity: 0.25;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* Pil-animation: meget lille bevægelse */
  @keyframes bounceArrow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(0.15em);
    }
  }

  .title {
    position: absolute;
    width: 120%;
    height: 100%;
    left: 4.5%;
    top: -15%;
    align-self: center;
  }

  .age-badge {
    position: absolute;
    padding: 0.5rem;
    bottom: 1rem;
    right: 0px;
    width: 13%;
  }

  @media (min-width: 1000px) {
    .hero-logo {
      position: absolute;
      top: 80%;
      left: 50%; /* <-- centrér også på desktop */
      transform: translate(-50%, -50%) scale(1);
      transform-origin: center center;
      transition: transform 0.5s ease-out;
      width: 1400px;
      pointer-events: none;
      z-index: 2;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .title {
      width: 80%;
      height: 100%;
      left: 4.5%;
      top: 30%;
    }
    .age-badge {
      position: absolute;
      padding: 0.5rem;
      bottom: 1rem;
      right: 10px;
      width: 5%;
    }

    .scroll-text {
      left: 10px;
      text-decoration: none;
      font-size: 1.5rem;
    }
  }
</style>

