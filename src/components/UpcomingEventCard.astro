---
// Props
const { date, month, title, description, imageUrl } = Astro.props;
---

<!-- MOBIL -->
<div class="event-card-mobile">
  <div class="event-date">
    <p class="day">{date}</p>
    <p class="month">{month}</p>
    <a class="calendar-link" href="#">
      Put i kalenderen
      <img src="/icons/calendar.svg" alt="Kalenderikon" class="calendar-icon" />
    </a>
  </div>

  <div class="event-info">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="event-image">
      <img src={imageUrl} alt={title} />
    </div>
  </div>
</div>

<!-- DESKTOP -->
<div class="event-card-desktop">
  <div class="event-date">
    <p class="day">{date}</p>
    <p class="month">{month}</p>

    <a class="calendar-link" href="../events.ics" download>
      Put i kalenderen
      <img src="/icons/calendar.svg" alt="Kalenderikon" class="calendar-icon" />
    </a>
  </div>

  <div class="event-info">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>

  <div class="event-image">
    <img src={imageUrl} alt={title} />
  </div>
</div>

<style>
  .event-card-mobile,
  .event-card-desktop {
    display: none;
  }

  /* MOBIL VISNING */
  @media (max-width: 799px) {
    .event-info h3 {
      padding: 1rem 0rem 0rem 1rem;
    }

    .event-info p {
      padding: 0rem 1rem;
    }
    .event-card-mobile {
      display: grid;
      grid-template-columns: 1fr 3fr;
      width: 100vw;
      margin-left: calc(-1 * ((100vw - 100%) / 2));
    }

    .event-card-mobile .event-date {
      border-right: 1px solid #32473a;
      padding: 1rem;
      text-align: center;
      width: 25vw;
    }

    .event-card-mobile .day {
      font-size: 4rem;
      font-family: "Nimbus Sans D OT Bold";
      color: #32473a;
      margin: 0;
    }

    .event-card-mobile .month {
      font-size: 1.2rem;
      font-family: "Nimbus Sans D OT Bold";
      text-transform: uppercase;
      margin-top: -0.5rem;
      color: #32473a;
    }

    .event-card-mobile .calendar-link {
      font-family: "Nimbus Sans D OT Light";
      font-size: 0.9rem;
      color: #32473a;
      text-decoration: underline;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.3rem;
      margin-top: 0.5rem;
    }

    .event-card-mobile .calendar-icon {
      width: 1 0.3rem;
      height: 1.3rem;
    }

    .event-card-mobile .event-info {
      font-family: "Nimbus Sans D OT Light";
      display: flex;
      flex-direction: column;
    }

    .event-card-mobile .event-info h3 {
      font-family: "Nimbus Sans D OT Bold";
      font-size: 1.3rem;
      margin: 0 0 0.5rem;
      color: #32473a;
    }

    .event-card-mobile .event-info p {
      font-size: 1rem;
      line-height: 1.4;
      color: #32473a;
    }

    .event-card-mobile .event-image {
      margin-top: 1rem;
    }

    .event-card-mobile .event-image img {
      width: 100%;
      height: auto;
      object-fit: cover;
      display: block;
      border-top: 1px solid #32473a;
    }
  }

  /* DESKTOP VISNING */
  @media (min-width: 800px) {
    .event-card-desktop {
      display: grid;
      grid-template-columns: 1fr 2fr 1fr;
      width: 100vw;
      margin-left: calc(-1 * ((100vw - 100%) / 2));
    }

    .event-card-desktop .event-date {
      border-right: 1px solid #32473a;
      padding: 1rem;
      text-align: center;
    }

    .event-card-desktop .day {
      font-size: 9rem;
      font-family: "Nimbus Sans D OT Bold";
      margin: 0;
      padding-left: 7.5rem;
      color: #32473a;
    }

    .event-card-desktop .month {
      font-size: 1.5rem;
      font-family: "Nimbus Sans D OT Bold";
      text-transform: uppercase;
      margin-top: -2rem;
      padding-left: 9rem;
      color: #32473a;
    }

    .event-card-desktop .calendar-link {
      font-family: "Nimbus Sans D OT Light";
      font-size: 1rem;
      color: #32473a;
      text-decoration: underline;
      text-underline-offset: 0.3rem;
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
      margin-top: 0.5rem;
      padding-left: 8rem;
    }

    .event-card-desktop .calendar-icon {
      width: 1.3rem;
      height: 1.3rem;
    }

    .event-card-desktop .event-info {
      border-right: 1px solid #32473a;
      padding: 1rem;
      font-family: "Nimbus Sans D OT Light";
    }

    .event-card-desktop .event-info h3 {
      font-family: "Nimbus Sans D OT Bold";
      font-size: 1.3rem;
      margin: 0 0 0.5rem;
      color: #32473a;
    }

    .event-card-desktop .event-info p {
      font-size: 1rem;
      line-height: 1.4;
      color: #32473a;
    }

    .event-card-desktop .event-image {
      display: block;
    }

    .event-card-desktop .event-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
  }
</style>
