<style>
  .img-container {
    position: absolute;
    top: 0;
    display: grid;
    grid-template-columns: 1fr;
    width: 100vw;
    height: 4vw;
  }

  .img2 {
    width: 100vw;
    height: 100vw;
    object-fit: cover;
    z-index: 1;
    opacity: 0;
    border-right: 1px solid #32473a;
    border-bottom: 1px solid #32473a;
  }

  .img-container img {
    grid-row: 1;
    grid-column: 1;
  }
  .wrapper {
    position: relative;
    justify-content: center;
    border-right: 1px solid #32473a;
    border-bottom: 1px solid #32473a;
    width: 100vw;
    height: 100vw;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .heading,
  .heading h3 {
    transition: color 0.4s ease;
  }
  .img1 {
    width: 35%;
    margin: 0 auto;
    padding-top: 3rem;
  }

  .heading {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
  }

  .product-tag {
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: top;
    border-top: 1px solid #32473a;
    width: 100%;
    height: 5.5rem;
    background-color: #fff8fa;
    z-index: 9;
  }

  .product-tag p {
    width: 125%;
  }

  .buy h3,
  a {
    display: flex;
    justify-content: end;
    align-items: center;
  }

  .product-tag a:hover {
    cursor: not-allowed;
  }

  .buy {
    width: 20rem;
  }

  h3,
  p {
    padding: 1rem 1.5rem;
  }
  .buy a {
    padding: 0rem 1.5rem;
  }

  @media (min-width: 700px) {
    .wrapper,
    .img-container,
    .img2 {
      height: 50vw;
      width: 50vw;
    }
    .wrapper:hover .heading,
    .wrapper:hover .heading h3 {
      color: #ffcdd8;
      transition: color 0.5s ease-in-out;
    }
  }
  @media (min-width: 1079px) {
    .wrapper,
    .img-container,
    .img2 {
      height: 33.33vw;
      width: 33.33vw;
    }
  }

  .hidden {
    visibility: hidden;
  }
  .visible {
    visibility: visible;
  }
</style>

<script>
  //@ts-nocheck
  document.addEventListener("DOMContentLoaded", () => {
    const mq = window.matchMedia("(min-width: 700px)");

    function setAnimation(active) {
      document.querySelectorAll(".wrapper").forEach((wrapper) => {
        const img2 = wrapper.querySelector(".img2");
        if (!img2) return;

        // Remove previous listeners to avoid duplicates
        wrapper.onmouseover = null;
        wrapper.onmouseout = null;

        if (active) {
          wrapper.onmouseover = () => {
            img2.style.opacity = "1";
            img2.style.transition = "opacity 0.5s ease-in-out";
          };
          wrapper.onmouseout = () => {
            img2.style.opacity = "0";
            img2.style.transition = "opacity 0.5s ease-in-out";
          };
        } else {
          img2.style.opacity = "0";
        }
      });
    }

    // Initial setup
    setAnimation(mq.matches);

    // Listen for changes in screen size
    mq.addEventListener("change", (e) => {
      setAnimation(e.matches);
    });
  });
</script>
