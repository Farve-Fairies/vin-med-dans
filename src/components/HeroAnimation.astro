---
// HeroAnimation.astro
import "../scripts/scaleLogo.js";
---

<header class="site-header">
  <img src="/logo/logo-text-pink.svg" alt="Logo" class="logo" />
</header>

<script is:client>
  import scaleLogoOnScroll from "../scripts/scaleLogo.js";
  scaleLogoOnScroll();
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 100;
    background-color: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none; /* s√• hero ikke blokerer scroll */
  }

  .logo {
    width: 70vw;
    max-width: 1000px;
    transition: transform 0.1s ease-out;
    transform-origin: top center;
    pointer-events: auto;
  }
</style>
