    >
  </div>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }

  a {
    text-decoration: none;
    transition: all 0.8s ease-in-out;
  }
  .desktre-tekst {
    display: none;
  }
  .scroll-text1 {
    display: none;
  }

  .scroll-text {
    writing-mode: vertical-rl;
    font-size: 1rem;
    color: #32473a;
    background: none;
    border-radius: 0;
    text-align: center;
    display: flex;
    align-items: center;
    gap: 0.1em;
    padding-left: 0.5rem;
    padding-bottom: 0;
    text-decoration: none;
    transition: all 0.8s ease-in-out;
  }

  .scroll-text .arrow {
    display: inline-block;
    font-size: 1.1em;
    animation: bounceArrow 2.5s infinite;
    transition: color 0.2s;
    transform: rotate(90deg);
  }

  /* Fade animation for hele indikatoren */
  @keyframes fadeInOut {
    0%,
    100% {
      opacity: 0.15;
    }
    10%,
    90% {
      opacity: 0.25;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* Pil-animation: meget lille bevægelse */
  @keyframes bounceArrow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(0.15em);
    }
  }

  /* MOBIL: Scroll-tekst lodret i venstre side af sidste kort */
  .scroll-card-wrapper {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: auto;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 10;
    pointer-events: auto;
  }

  /* Sørg for at .card-scroll-wrapper er relativ på mobil */
