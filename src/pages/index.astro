    src="../illustrationer/aebler.svg"
    alt="Æbler illustration"
    class="aebler"
    loading="lazy"
  />

  <div class="billede-wrapper">
    <h4 class="billede-titel4">Respekt for miljøet og minimalt aftryk.</h4>
  </div>

