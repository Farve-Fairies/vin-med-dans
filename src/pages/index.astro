---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import AgePopup from "../components/AgePopup.astro";
import FrontProductCard from "../components/FrontProductCard.astro";

const wine1 = {
  title: "Hønefuld",
  img2: "hoenefuld-2.webp",
};
const wine2 = {
  title: "Havtorben",
  img2: "havtorben-2.webp",
};
const wine3 = {
  title: "Stikkelsvin",
  img2: "stikkelsvin-2.webp",
};
---

<Layout title="Forside">
  <div id="hero">
    <Hero />
  </div>
  <AgePopup />
  <section class="et section-fade" id="et">
    <h4 class="venstre">
      Vinmageri med fokus på kvalitet, lækre råvarer og en rasende god smag.
    </h4>
    <img
      src="../billeder/produktbilleder/hoenefuld-1.webp"
      alt="Hønefuld vinflaske"
      class="vin-hero"
      loading="lazy"
    />
    <div class="linje"></div>
    <h4 class="hoejre">GOD VIN PÅ GODE OG DÅRLIGE DAGE</h4>
    <div class="linje"></div>
  </section>
  <section>
    <div class="kolonne-wrapper">
      <h4 class="venstre-nede">100% bæredygtigt.</h4>
      <div class="linje-midt"></div>
      <h4 class="hoejre-nede">
        Frugt & bær er plukket rundt omkring i Danmark.
      </h4>
    </div>
  </section>

  <section class="product section-fade">
    <h4 class="venstre-nede">100% bæredygtigt.</h4>
