<script>
  //@ts-nocheck
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { ScrollSmoother } from "gsap/ScrollSmoother";

  gsap.registerPlugin(ScrollTrigger, ScrollSmoother);

  ScrollSmoother.create({
    smooth: 0.8,
    effects: true,
    normalizeScroll: true,
    wrapper: "#smooth-wrapper",
    content: "#smooth-content",
  });

  // Smooth transition for banner-section
  gsap.to(".banner-section", {
    scrollTrigger: {
      trigger: ".banner-section",
      start: "top top",
      endTrigger: ".product-section",
      end: "top top",
      scrub: true,
    },
    opacity: 0,
    y: -100,
    ease: "power1.out",
  });

  let wasAbove = window.innerWidth > 1000;

  window.addEventListener("resize", () => {
    const nowAbove = window.innerWidth > 1000;
    if (wasAbove && !nowAbove) {
      setTimeout(() => {
        const bannerSection = document.querySelector(".banner-section");
        const smoother = window.ScrollSmoother && window.ScrollSmoother.get();
        // Force ScrollTrigger and Smoother to recalculate positions
        if (window.ScrollTrigger) window.ScrollTrigger.refresh(true);
        if (smoother) smoother.refresh();
        setTimeout(() => {
          if (bannerSection) {
            if (smoother) {
              smoother.scrollTo(bannerSection, true, "top top");
            } else {
              bannerSection.scrollIntoView({ behavior: "smooth" });
            }
          }
        }, 100); // Second delay to ensure layout is updated
      }, 200); // First delay to allow CSS/layout to update
    }
    wasAbove = nowAbove;
  });
</script>
